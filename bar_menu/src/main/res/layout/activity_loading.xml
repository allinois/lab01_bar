<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_loading"
    android:background="@color/backgroundActivity">


    <FrameLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ellipse"
            android:layout_marginLeft="87sp"
            android:layout_marginTop="218sp"
            android:minWidth="230sp"
            android:minHeight="237.22sp"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cocktail"
            android:layout_marginLeft="150sp"
            android:layout_marginTop="285sp"
            android:minWidth="96sp"
            android:minHeight="116sp"
            />

        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="176sp"
            android:layout_marginTop="471sp"
            android:textSize="30sp"
            android:textFontWeight="400"
            android:fontFamily="@font/abeezeeregular"
            android:text="Sour" />

        <TextView
            android:id="@+id/corporateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best drink receipes"
            android:fontFamily="@font/abeezeeitalic"
            android:layout_marginLeft="105sp"
            android:layout_marginTop="522sp"
            android:textSize="24sp"
            android:textFontWeight="400"
            />



    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>